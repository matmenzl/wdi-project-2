<div class="row">
  <div class="small-9 small-centered medium-6 medium-centered large-6 large-centered columns">

    <h4 class="text-center">Sign up for Meet Your Street</h4>        
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <form>
      <div class="large-12 columns">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>
      <div class="large-12 columns">
        <%= f.text_field :first_name, autocomplete: "off", placeholder: "First Name" %>
      </div>
      <div class="large-12 columns">
        <%= f.text_field :last_name, autocomplete: "off", placeholder: "Last Name" %>
      </div>

      <div class="large-12 columns">
        <%= f.file_field :user_image %>
      </div>
      <div class="large-12 columns">
        <%= f.text_field :remote_user_image_url, placeholder: "Remote URL" %>
      </div>


      <div class="large-12 columns">
        <%= f.text_field :street, autocomplete: "off", placeholder: "Street & Number" %>
      </label>
    </div>

    <div class="large-12 columns">
      <%= f.text_field :city, autocomplete: "off", placeholder: "City" %>
    </label>
  </div>

  <div class="large-12 columns">
    <%= f.text_field :zip, autocomplete: "off", placeholder: "Post Code" %>
  </label>
</div>

<div class="large-6 columns">
  <%= f.password_field :password, autocomplete: "off", placeholder: "Password (min 6 characters)" %>
</div>
<div class="large-6 columns">
 <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
</div>
<div class="large-12 columns">
<%= f.submit "Sign up", class: "button radius"%>
</div>
</form>
<br>
<div class="large-12 columns">
Do you already have an account?
<%= render "devise/shared/links" %>
</div>

<% end %>
</div>

</div>

