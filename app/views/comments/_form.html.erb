<div class="row commentform">
  <div class="large-12 columns">
    <%= form_for(:comment, url: comments_path(commentable_type: commentable.class.to_s.underscore, commentable_id: commentable.id)) do |f| %>
    <div class="row collapse">
      <div class="small-10 columns">
        <%= f.text_area :comment, placeholder: "Write a Comment to get in contact" %>
      </div>
      <div class="small-2 columns">
        <%= f.submit "Comment!", class: "button radius" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
