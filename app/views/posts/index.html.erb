
<h1>Your Neighbourhood <%= current_user.zip %> <%= current_user.city %></h1>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{current_user.latitude}%2C#{current_user.longitude}" %>

<div class="row">
<% @posts.each do |post| %>
  <div class="medium-6 columns">
    <div class="card">
      <div class="image">
        <%= link_to image_tag(post.image.url), post.image.url %>
        <span class="title"></span>
      </div>
      <div class="content">
        <p><%= post.title %></p>
      </div>
      <div class="action">
        <p><span>What:</span><br><%= post.title %></p>
        <p><span>Post Type:</span><br><%= post.post_type %></p>
        <p><span>Money:</span><br><%= post.price %></p>
        <p><span>Date:</span><br><%= post.created_at.to_s(:short) %></p>
        <%= link_to "Show Detail", post_path(post) %>
      </div>
    </div>
  </div>
  <% end %>
</div>

