<div class="media-object stack-for-small">
  <div class="media-object-section">
    <div class="thumbnail">
    <%= link_to image_tag(@post.image.url), @post.image.url %>   
    </div>
  </div>
  </div>
  <div class="media-object-section">
    <h4><span>What:</span><br><%= @post.title %></h4>
    <h5><span>Post Type:</span><br><%= @post.post_type %></h5>
    <h5><span>Money:</span><br><%= @post.price %></h5>
    <h5><span>Date:</span><br><%= @post.created_at %></h5>
  </div>
</div>

<!-- TO DO show buttons only to the owner of the post -->

<div class="actions">
  <%= link_to "Edit Post", edit_post_path %>
</div>

<div>
<%= link_to "Profile", current_user %>
</div>

<div>
<%= render partial: 'comments/form', locals: { commentable: @post } %>
</div>

<div>
<%= render partial: 'comments/comment', collection: @comments, locals: { commentable: @post } %>
</div>
