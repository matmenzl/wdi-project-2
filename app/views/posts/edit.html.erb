<div class="large-6 columns large-centered ">
    <%= form_for @post do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :remote_image_url %>
      <%= f.text_field :remote_image_url %>
    </div>

    <div class="field">
      <%= f.label :post_type %>
      <%= f.select :post_type, ['I look_for', 'I offer'] %>
    </div>

    <div class="field">
      <%= f.label :price %>
      <%= f.number_field :price, step: 0.01 %>
    </div>

    <div class="actions">
      <%= f.submit "Edit", class: "button tiny" %>
    </div>
    <% end %>

</div>
